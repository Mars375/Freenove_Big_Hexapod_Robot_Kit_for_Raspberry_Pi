# Application
APP_NAME=hexapod-robot
APP_VERSION=2.0.0
ENVIRONMENT=development

# Server
HOST=0.0.0.0
API_PORT=8000
VIDEO_PORT=8002
COMMAND_PORT=5002

# Security
API_KEY=your-secret-api-key-here
JWT_SECRET=your-jwt-secret-here
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Robot Configuration
ROBOT_NAME=Hexapod-01
MAX_SPEED=10
MAX_STEP_LENGTH=35

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/robot.log

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Orion Integration
ORION_BRAIN_URL=http://localhost:9000
ORION_GUARDIAN_ENABLED=true
ORION_HEALER_ENABLED=true

# Camera
CAMERA_ENABLED=true
CAMERA_FPS=30
CAMERA_RESOLUTION=640x480

# Sensors
IMU_ENABLED=true
ULTRASONIC_ENABLED=true
